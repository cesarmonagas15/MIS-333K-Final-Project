@model fa23team33_finalproject.Models.TransactionDetail

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>TransactionDetail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="scheduleID" value="@ViewData["scheduleID"]" />
            @Html.HiddenFor( model => model.Transaction.TransactionID)
            <div class="form-group">
                <label asp-for="Seat" class="control-label">Select a Seat: </label>
                @Html.DropDownList("SelectedSeat", (IEnumerable<SelectListItem>)ViewBag.AllSeats, new { @class = "form-control" })
                <span asp-validation-for="Seat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

